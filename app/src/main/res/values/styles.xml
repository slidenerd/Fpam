<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorPrimary">@color/colorTextPrimary</item>
        <item name="android:textColorSecondary">@color/colorTextSecondary</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowActionBar">false</item>
        <item name="android:windowBackground">@color/colorWindowBackground</item>
        <item name="toolbarStyle">@style/Widget.Toolbar</item>
        <item name="android:fontFamily" tools:targetApi="jelly_bean">sans-serif-thin</item>
    </style>


    <style name="Widget.Toolbar" parent="@style/Widget.AppCompat.Toolbar">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="navigationIcon">?attr/homeAsUpIndicator</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <!--All styles of the 'General' tab under 'Settings'-->
    <!--The first tab of the Settings screen known as 'General' has a root ViewGroup that uses this style-->
    <style name="settings_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:paddingBottom">@dimen/activity_vertical_margin</item>
        <item name="android:paddingLeft">24dp</item>
        <item name="android:paddingRight">24dp</item>
        <item name="android:paddingTop">@dimen/activity_vertical_margin</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' has a header called 'Common' that uses this style-->
    <style name="settings_general_common">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">16dp</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' has a header called 'Spam' that uses this style-->
    <style name="settings_general_spam">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_below">@id/separator_2</item>
        <item name="android:layout_marginBottom">20dp</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
    </style>
    <!--The first tab of the Settings screen known as 'General' with titles, icons, summaries and separators where each icon uses this style -->
    <style name="settings_general_icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' with titles, icons, summaries and separators where each summary uses this style-->
    <style name="settings_general_summary">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:textColor">@color/colorTextSecondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' with titles, icons, summaries and separators where each separator uses this style-->
    <style name="settings_general_separator">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:layout_marginBottom">12dp</item>
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:background">@color/colorDivider</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' with titles, icons, summaries and separators where each title uses this style-->
    <style name="settings_general_title">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:textColor">@color/colorTextPrimary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--The first tab of the Settings screen known as 'General' with a switch to select 'delete on swipe' where this style is used-->
    <style name="settings_general_switch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignBottom">@+id/text_summary_delete</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_alignTop">@+id/text_delete</item>
        <item name="android:layout_below">@+id/separator_1</item>
        <item name="android:layout_toRightOf">@+id/text_summary_delete</item>
    </style>

</resources>
